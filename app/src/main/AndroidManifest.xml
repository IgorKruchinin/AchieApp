<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.ikkui.achie">

    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Achie"
        tools:targetApi="30">
        <activity
            android:name=".ViewFullImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_view_full_image"
            android:theme="@style/Theme.Achie.Fullscreen" />
        <activity
            android:name=".PlanningActivity"
            android:exported="false"
            android:label="@string/title_activity_planning"
            android:theme="@style/Theme.Achie.NoActionBar" />
        <activity
            android:name=".ViewAchieActivity"
            android:exported="false"
            android:label="@string/title_activity_view_achie"
            android:theme="@style/Theme.Achie.NoActionBar" />
        <activity
            android:name=".AddAchieActivity"
            android:exported="false"
            android:label="@string/title_activity_add_achie"
            android:theme="@style/Theme.Achie.NoActionBar" />
        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.Achie.NoActionBar" />
        <activity
            android:name=".AddProfActivity"
            android:exported="false"
            android:label="@string/title_activity_add_prof"
            android:theme="@style/Theme.Achie.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Achie.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>